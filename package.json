{
  "name": "mcp-email-server",
  "version": "1.0.0",
  "description": "MCP server for Gmail email monitoring and meeting detection",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
